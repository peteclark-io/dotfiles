function get_kube_env {
   if [ -z $KUBECONFIG ]; then
      echo ""
   else
      local conf=${KUBECONFIG##*/}
      echo "k8s/${conf%-kubeconfig}"
   fi
}

alias pac-prod-eu="export KUBECONFIG=~/.kube/pac-prod-eu-kubeconfig"
